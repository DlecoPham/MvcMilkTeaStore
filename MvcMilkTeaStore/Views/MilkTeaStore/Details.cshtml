@using MvcMilkTeaStore.Models
@model TRASUA
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="offset-md-1 col-md-4">
        <img style="width: 100%;" src="~/Images/@Model.Hinhminhhoa" alt="">
    </div>
    <div class="col-md-6 details">
        <h3>@Model.Tentrasua</h3>
        <p style="text-align: justify">
            <span style="font-weight: bold">Mô tả:</span> @Model.Mota
        </p>
        <p class="price">
            Giá bán: <span style="color:red; font-size:32px;">@String.Format("{0:0.00}", Model.Dongia) VNĐ</span>
        </p>
        <a class="btn btn-primary" href="@Url.Action("ThemSanPhamVaoGio", "GioHang", new{ MaSP = Model.Matrasua })">
            Thêm vào giỏ hàng
        </a>
    </div>
</div>
